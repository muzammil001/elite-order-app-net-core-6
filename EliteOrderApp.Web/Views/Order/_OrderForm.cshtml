@model EliteOrderApp.Web.Models.OrderModel
<button class="btn btn-square btn-dark"
        onclick="showInPopup('@Url.Action("AddOrEdit", "Customer", null, Context.Request.Scheme)', 'New Customer')">
    New Customer
</button>
<button class="btn btn-square btn-dark"
        onclick="showInPopup('@Url.Action("AddOrEdit", "Item", null, Context.Request.Scheme)', 'New Item')">
    New Item
</button>
@if (Model.Order.Id > 0)
{
    <a href="@Url.Action("PaymentHistory", "Order", new {orderId = Model.Order.Id})">
        Add New Payment to this order
    </a>
}


<form asp-action="SaveOrder" asp-route-id="@Model.Order.Id" onsubmit="return saveOrder(this);" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Order.Id" id="orderId"/>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control d_today" type="text"/>
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Order.DeliveryDate" class="control-label"></label>
                <input asp-for="Order.DeliveryDate" class="form-control  d_today" type="text"/>
                <span asp-validation-for="Order.DeliveryDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <label asp-for="Order.CustomerId" class="control-label"></label>
                <div id="customerDropdown">
                    <partial name="_CustomerDropDownList"/>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group mt-5 ">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Order.ItemId" class="control-label"></label>

                <div id="itemDropDownList">
                    <partial name="_ItemDropDownList"/>
                </div>
                <div class="mt-5 ml-3">
                    <div class="row">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Total Amount:</span>
                            </div>
                            <input asp-for="Order.TotalAmount" type="text" class="form-control autonumber totalAmount" data-v-max="999999999" required="required" aria-label="Small" aria-describedby="totalAmount" data-v-min="0">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Advance Payment:</span>
                            </div>
                            <input asp-for="Order.AdvancePayment" type="text" class="form-control autonumber advancePayment" data-v-max="999999999" aria-label="Small" aria-describedby="advanceAmount" data-v-min="0">
                        </div>
                    </div>


                    @if (Model.Order.Id == 0)
                    {
                        <div class="row mt-3">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Balance:</span>
                                </div>
                                <input asp-for="Order.Balance" type="text" class="form-control autonumber balance" data-v-max="999999999" readonly="readonly" aria-label="Small" aria-describedby="balance" data-v-min="0">
                            </div>
                        </div>
                    }
                </div>

            </div>
            <div class="col-md-2 mt-4">
                <button class="btn btn-success add-to-cart " id="" type="button">Add to cart</button>
            </div>
            @if (Model.Order.Id == 0)
            {
                <div class="col-md-6">
                    <partial name="_CartItems"/>
                </div>
            }
            else
            {
                <div class="col-md-6">
                    <partial name="_OrderDetails"/>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-save"></i>
            Save
        </button>
        <a href="@Url.Action("ManageOrders", "Order")" class="btn btn-primary btn-lg">Back to orders</a>
    </div>
</form>

<style>
	.datepicker > .datepicker-days {
		display: block;
	}

	ol.linenums {
		margin: 0 0 0 -8px;
	}
</style>
<script>
	var page = {
		bootstrap: 3
	}

	function swap_bs() {
		page.bootstrap = 3;
	}

</script>